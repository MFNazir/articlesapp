<!-- app/views/articles/index.html.erb -->

<h1>Articles</h1>
<ul class="list-group">
  <% @articles.each do |article| %>
    <li class="list-group-item">
      <%= link_to article.title, article_path(article) %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Article', new_article_path, class: 'btn btn-primary mt-3' %>


