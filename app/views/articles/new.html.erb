<!-- app/views/articles/new.html.erb -->
<head>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <!-- Add the following line to include Bootstrap stylesheets -->
  <% if controller_name == 'articles' && action_name == 'new' %>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css' %>
  <% end %>
</head>
<h1>New Article</h1>

<%= form_with(model: @article) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

      <hr class="my-4">

  <div class="form-actions">
    <%= form.submit 'Create Article', class: 'btn btn-primary' %>

    <%= link_to 'Back to Articles', articles_path, class: 'btn btn-secondary' %>
  </div>
<% end %>




